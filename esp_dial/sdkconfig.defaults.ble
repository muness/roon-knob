# BLE HID Configuration
# Include this file when building with BLE support:
#   idf.py -DSDKCONFIG_DEFAULTS="sdkconfig.defaults;sdkconfig.defaults.ble" build

# Enable BLE HID mode in Roon Knob
CONFIG_ROON_KNOB_BLE_HID_ENABLED=y

# Bluetooth Controller
CONFIG_BT_ENABLED=y
CONFIG_BT_CONTROLLER_ENABLED=y

# Bluedroid Stack
CONFIG_BT_BLUEDROID_ENABLED=y
CONFIG_BT_BLE_ENABLED=y

# GATT Server (required for HID)
CONFIG_BT_GATTS_ENABLE=y
CONFIG_BT_GATT_MAX_SR_PROFILES=8
CONFIG_BT_GATT_MAX_SR_ATTRIBUTES=100

# Security (for pairing)
CONFIG_BT_BLE_SMP_ENABLE=y

# Release Classic BT memory (we only use BLE)
CONFIG_BT_CLASSIC_ENABLED=n

# Reduce log verbosity for BT
CONFIG_BT_LOG_HCI_TRACE_LEVEL_WARNING=y
CONFIG_BT_LOG_BTM_TRACE_LEVEL_WARNING=y
CONFIG_BT_LOG_L2CAP_TRACE_LEVEL_WARNING=y
CONFIG_BT_LOG_SMP_TRACE_LEVEL_WARNING=y
CONFIG_BT_LOG_GATT_TRACE_LEVEL_WARNING=y
